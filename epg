docker pull ghcr.io/iptv-org/epg:master
docker run -p 3000:3000 -v /path/to/channels.xml:/epg/channels.xml -e DAYS=7 ghcr.io/iptv-org/epg:master


docker run \
-p 5000:3000 \
-v /path/to/channels.xml:/epg/channels.xml \
-e CRON_SCHEDULE="0 0,12 * * *" \
-e MAX_CONNECTIONS=10 \
-e GZIP=true \
-e CURL=true \
-e PROXY="socks5://127.0.0.1:1234" \
-e DAYS=14 \
-e TIMEOUT=5 \
-e DELAY=2 \
ghcr.io/iptv-org/epg:master
