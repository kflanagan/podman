podman run -d --name=netdata \
--pid=host \
--network=host \
-v netdataconfig:/etc/netdata \
-v netdatalib:/var/lib/netdata \
-v netdatacache:/var/cache/netdata \
-v /:/host/root:ro,rslave \
-v /etc/passwd:/host/etc/passwd:ro \
-v /etc/group:/host/etc/group:ro \
-v /etc/localtime:/etc/localtime:ro \
-v /proc:/host/proc:ro \
-v /sys:/host/sys:ro \
-v /etc/os-release:/host/etc/os-release:ro \
-v /var/log:/host/var/log:ro \
-v /var/run/podman/podman.sock:/var/run/docker.sock:ro \
--restart unless-stopped \
--cap-add SYS_PTRACE \
--cap-add SYS_ADMIN \
--security-opt apparmor=unconfined \
-e NETDATA_CLAIM_TOKEN=_DFcYzugTjUwhAZ6DoJW9nVsDEQs6pcuYdha-QVazy37UeWylWS5VNTzvt1pbEfU4PjHHT4k5KwwYnehgRfc_vOgChpfPUWU0keFJnd78MXJ9vN0tAwK8x5tkIhKfDE1Hvd_GOo \
-e NETDATA_CLAIM_URL=https://app.netdata.cloud \
-e NETDATA_CLAIM_ROOMS=c3d53e61-b5b8-47c6-ac42-8cf3d499317c \
netdata/netdata:edge
